<div class="bg" style="background-image: linear-gradient(rgba(255,255,255,0.6),rgba(255,255,255,0.6)), url('/assets/winter_wonderland.jpeg' );">
  <div class="container" >
  <section id="new-appartment">
    <h1>New appartment</h1>
  </section>
  <section>
    <div class="form-description">
      <%= simple_form_for [@appartment] do |f| %>
      <%= f.input :address, placeholder: "e.g. Unterer Mooserweg 2, 6580 Sankt Anton am Arlberg" %>
      <%= f.input :header, placeholder: "e.g. Cosy appartment in Swiss Alps" %>
      <%= f.input :photo, as: :attachinary %>
      <%= f.input :appartment_type, collection: ["Entire house", "Entire appartment", "Room"] %>
      <%= f.input :description, placeholder: "min. 200 characters"%>
      <%= f.input :price, placeholder: " in EUR and per night" %>

      <%= f.submit "Create new appartment", class: "btn btn-primary btn-lg" %>
      <% end %>

    </div>
  </section>
</div>
</div>

